<Window x:Class="weibo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:weibo"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid RenderTransformOrigin="0.515,0.437">
        <Button x:Name="button" Visibility="Visible"   Content="确定" HorizontalAlignment="Left" Margin="209,155,0,0" VerticalAlignment="Top" Width="76" Click="button_Click"/>
        <Label x:Name="label" Content="请输入微博用户名：" HorizontalAlignment="Left" Margin="72,35,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="122,86,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="248"/>
        <Label x:Name="label1" Content="注：本程序可以绑定任意一个微博用户，当微博用户主页面存在'关机'二字时，电脑关闭" HorizontalAlignment="Left" Margin="10,239,0,0" VerticalAlignment="Top"/>

        <Button x:Name="button1" Content="取消绑定" Visibility="Hidden" HorizontalAlignment="Left" Margin="210,179,0,0" VerticalAlignment="Top" Width="75" Click="button1_Click"/>
        <Label x:Name="label2" Content="且超过2分钟以后的关机指令不会起效。（本程序在绑定成功后，可以直接关闭掉）" HorizontalAlignment="Left" Margin="10,269,0,0" VerticalAlignment="Top" Width="471"/>

    </Grid>
</Window>
